  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Main File",
      "type": "debugpy",
      "request": "launch",
      "program": "main.py",
      "console": "internalConsole",
    },
    {
      "name": "Python: Run test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "internalConsole",
      "args": [
        "-s",
        "-vvv",
        "tests",
      ]
    },
  ]
}